<form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="title">Title</label>
    <input type="text" id="title" name="article[title]" value="<%= @article.title %>">
    <label for="content">Content</label>
    <textarea name="article[content]" id="content" value="<%= @article.content %>"></textarea>
    <input type="submit">

</form>